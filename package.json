{
  "name": "create-safe-tx",
  "version": "1.0.0",
  "description": "ðŸ“œ Useful script to build complex Gnosis Safe transactions involving Gnosis Multisend and/or Zodiac modifiers",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "cli": "ts-node src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-labs/create-safe-tx.git"
  },
  "license": "MIT",
  "author": {
    "name": "Romain (Rubilmax) Milon",
    "email": "rmilon@gmail.com",
    "url": "https://github.com/rubilmax"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "gnosis",
    "safe",
    "multisend",
    "tx",
    "builder",
    "calldata",
    "evm"
  ],
  "bugs": {
    "url": "https://github.com/morpho-labs/create-safe-tx/issues"
  },
  "homepage": "https://github.com/morpho-labs/create-safe-tx#readme",
  "dependencies": {
    "@inquirer/prompts": "^1.0.3",
    "@types/node": "^20.1.1",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1",
    "dotenv": "^16.0.3",
    "ethers": "^6.3.0",
    "ethers-multisend": "^2.4.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typechain/ethers-v5": "^10.2.1",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/lodash.debounce": "^4.0.7",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "prettier"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/types/**/*.ts"
    ],
    "transform": {
      "\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false,
          "isolatedModules": true
        }
      ]
    }
  }
}
